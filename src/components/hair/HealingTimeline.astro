---
/**
 * HealingTimeline.astro
 * Luxury healing journey visualization.
 */
const milestones = [
    { day: "1. Gün", desc: "İlk Kontrol", longDesc: "Bandaj çıkarılır ve ilk yıkama uzman tarafından yapılır." },
    { day: "3. Gün", desc: "Hassas Dönem", longDesc: "Ödem azalmaya başlar, ilk evde yıkama gerçekleştirilir." },
    { day: "10. Gün", desc: "Kabuk Dökümü", longDesc: "Kabuklar dökülür ve ekilen greftler yerleşmeye başlar." },
    { day: "3. Ay", desc: "Şok Dökülme Sonu", longDesc: "Şok dökülme biter ve yeni saçlar kalıcı olarak çıkmaya başlar." },
    { day: "12. Ay", desc: "Final Görünüm", longDesc: "Saçlar %100 hacmine ulaşır ve doğal görünüm tamamlanır." }
];
---

<div class="py-16">
    <!-- Desktop: Horizontal Timeline -->
    <div class="hidden md:block relative max-w-6xl mx-auto px-4">
        <!-- Connecting Line -->
        <div class="absolute top-[42px] left-0 right-0 h-1 bg-slate-100 z-0"></div>
        <div class="absolute top-[42px] left-0 w-full h-1 bg-gradient-to-r from-[#C49A6C] via-[#C49A6C] to-slate-100 z-1 animate-shimmer scale-x-75 origin-left"></div>

        <div class="flex justify-between relative z-10">
            {milestones.map((item, index) => (
                <div class="flex flex-col items-center text-center max-w-[180px]">
                    <!-- Node -->
                    <div class="w-20 h-20 rounded-full bg-white border-4 border-white shadow-xl flex items-center justify-center mb-6 group hover:scale-110 transition-transform duration-300">
                        <div class="w-16 h-16 rounded-full bg-[#C49A6C] flex items-center justify-center text-white font-bold text-sm shadow-inner tracking-tighter">
                            {item.day}
                        </div>
                    </div>
                    <!-- Text Content -->
                    <h4 class="font-bold text-slate-900 mb-2">{item.desc}</h4>
                    <p class="text-xs text-slate-500 leading-relaxed font-medium italic">{item.longDesc}</p>
                </div>
            ))}
        </div>
    </div>

    <!-- Mobile: Vertical Timeline -->
    <div class="md:hidden space-y-8 px-4">
        {milestones.map((item, index) => (
            <div class="flex gap-6 relative">
                <!-- Vertical Line Segment -->
                {index !== milestones.length - 1 && (
                    <div class="absolute left-7 top-14 w-0.5 h-full bg-slate-100"></div>
                )}
                
                <!-- Node -->
                <div class="flex-shrink-0 w-14 h-14 rounded-full bg-[#C49A6C] flex items-center justify-center text-white font-bold text-xs shadow-lg relative z-10">
                    {item.day}
                </div>
                
                <!-- Content -->
                <div class="pt-1">
                    <h4 class="font-bold text-slate-900 mb-1">{item.desc}</h4>
                    <p class="text-xs text-slate-500 italic leading-relaxed">{item.longDesc}</p>
                </div>
            </div>
        ))}
    </div>
</div>

<style>
    @keyframes shimmer {
        0% { transform: scaleX(0.2); }
        100% { transform: scaleX(0.8); }
    }
    .animate-shimmer {
        animation: shimmer 2s ease-in-out infinite alternate;
    }
</style>
